generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  lastName  String
  phone     String?
  email     String    @unique
  password  String
  role      Role      @default(CLIENT)
  active    Boolean  @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  classify UserClassify?
  
  reservations Reservation[]
  settingHistories SettingHistory[]
  history    UserHistory[]
  passwordResetTokens PasswordResetToken[]
}

model UserHistory {
  id        Int      @id @default(autoincrement())
  userId    Int
  field     String
  oldValue  String?
  newValue  String?
  changedBy Int?     // id del usuario admin que hizo el cambio
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Space {
  id          Int           @id @default(autoincrement())
  name        String
  type        SpaceType     // desk fijo/flex, sala, etc.
  capacity    Int
  description String?
  active      Boolean       @default(true)

  reservations Reservation[]
}

model Reservation {
  id        Int      @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime

  userId  Int
  spaceId Int

  user   User  @relation(fields: [userId], references: [id])
  space  Space @relation(fields: [spaceId], references: [id])
  
  status    ReservationStatus @default(ACTIVE)
  createdAt DateTime @default(now())
}

enum ReservationStatus {
  ACTIVE
  PENDING
  CANCELLED
  REJECTED
}

enum Role {
  ADMIN
  CLIENT
}

enum SpaceType {
  FIX_DESK
  FLEX_DESK
  MEETING_ROOM
  OFFICE
  SHARED_TABLE
}

enum SettingStatus {
  ACTIVE
  INACTIVE
}

enum SettingAction {
  CREATED
  UPDATED
  DEACTIVATED
}

enum SettingValueType {
  NUMBER
  STRING
  BOOLEAN
}
enum UserClassify {
  GOOD
  REGULAR
  BAD
}

model Setting {
  id          Int              @id @default(autoincrement())
  key         String           @unique
  value       String
  valueType   SettingValueType
  status      SettingStatus    @default(ACTIVE)
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  history     SettingHistory[]
}

model SettingHistory {
  id              Int             @id @default(autoincrement())
  settingId       Int
  oldValue        String?
  newValue        String
  action          SettingAction
  changedByUserId Int?
  createdAt       DateTime        @default(now())

  setting   Setting @relation(fields: [settingId], references: [id])
  changedBy User?    @relation(fields: [changedByUserId], references: [id])
}

model EmailTemplate {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  name      String
  subject   String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  tokenHash String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
}
