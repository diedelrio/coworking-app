generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                  @id @default(autoincrement())
  name                String
  lastName            String
  phone               String?
  email               String               @unique
  password            String
  role                Role                 @default(CLIENT)
  active              Boolean              @default(true)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  classify            UserClassify?
  maternalLastName    String?
  passwordResetTokens PasswordResetToken[]
  reservations        Reservation[]
  settingHistories    SettingHistory[]
  history             UserHistory[]
}

model UserHistory {
  id        Int      @id @default(autoincrement())
  userId    Int
  field     String
  oldValue  String?
  newValue  String?
  changedBy Int?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Space {
  id           Int           @id @default(autoincrement())
  name         String
  type         SpaceType
  capacity     Int
  description  String?
  active       Boolean       @default(true)
  // ✅ NUEVO
  hourlyRate   Decimal       @default(0.00) @db.Decimal(10, 2)
  imageUrl     String?
  reservations Reservation[]
}

model Reservation {
  id        Int               @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime
  userId    Int
  spaceId   Int
  status    ReservationStatus @default(ACTIVE)
  createdAt DateTime          @default(now())
  attendees Int               @default(1)
  // ✅ NUEVOS (snapshot + cálculo)
  hourlyRateSnapshot Decimal @default(0.00) @db.Decimal(10, 2)
  durationMinutes    Int     @default(0)
  totalAmount        Decimal @default(0.00) @db.Decimal(10, 2)
  // ✅ NUEVOS (mock)
  purpose String?
  notes   String?

  space     Space             @relation(fields: [spaceId], references: [id])
  user      User              @relation(fields: [userId], references: [id])
}

model Setting {
  id          Int              @id @default(autoincrement())
  key         String           @unique
  value       String
  valueType   SettingValueType
  status      SettingStatus    @default(ACTIVE)
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  history     SettingHistory[]
}

model SettingHistory {
  id              Int           @id @default(autoincrement())
  settingId       Int
  oldValue        String?
  newValue        String
  action          SettingAction
  changedByUserId Int?
  createdAt       DateTime      @default(now())
  changedBy       User?         @relation(fields: [changedByUserId], references: [id])
  setting         Setting       @relation(fields: [settingId], references: [id])
}

model EmailTemplate {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  name      String
  subject   String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordResetToken {
  id        Int       @id @default(autoincrement())
  userId    Int
  tokenHash String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
}

enum ReservationStatus {
  ACTIVE
  PENDING
  CANCELLED
  REJECTED
}

enum Role {
  ADMIN
  CLIENT
}

enum SpaceType {
  FIX_DESK
  FLEX_DESK
  MEETING_ROOM
  OFFICE
  SHARED_TABLE
}

enum SettingStatus {
  ACTIVE
  INACTIVE
}

enum SettingAction {
  CREATED
  UPDATED
  DEACTIVATED
}

enum SettingValueType {
  NUMBER
  STRING
  BOOLEAN
}

enum UserClassify {
  GOOD
  REGULAR
  BAD
}
