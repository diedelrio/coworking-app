generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model User {
  id        Int       @id @default(autoincrement())
  name      String
  lastName  String
  phone     String?
  email     String    @unique
  password  String
  role      Role      @default(CLIENT)
  active    Boolean  @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  reservations Reservation[]
}

model Space {
  id          Int           @id @default(autoincrement())
  name        String
  type        SpaceType     // desk fijo/flex, sala, etc.
  capacity    Int
  description String?
  active      Boolean       @default(true)

  reservations Reservation[]
}

model Reservation {
  id        Int      @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime

  userId  Int
  spaceId Int

  user   User  @relation(fields: [userId], references: [id])
  space  Space @relation(fields: [spaceId], references: [id])
  
  status    ReservationStatus @default(ACTIVE)
  createdAt DateTime @default(now())
}

enum ReservationStatus {
  ACTIVE
  CANCELLED
}

enum Role {
  ADMIN
  CLIENT
}

enum SpaceType {
  FIX_DESK
  FLEX_DESK
  MEETING_ROOM
}

